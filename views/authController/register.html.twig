{% extends "blank.html.twig" %}
{% block title %}
	{{ parent() }}
	Inscription
{%
endblock %}
{% block content %}
	{% do clear_session_alert() %}
	<div>
		<div>
			<form novalidate action="" method="post">
				<h1>Inscription</h1>
				{% if session.alert is defined %}
					<div>
						{{ session.alert.message }}
					</div>
				{% endif %}
				<div>
					<label for="name">
						Nom
					</label>
					<input type="text" placeholder="Votre nom" name="name" id="name">
				</div>
				<div>
					<label for="email">
						Email
					</label>
					<input type="text" placeholder="exemple@gmail.com" name="email" id="email">
				</div>
				<div>
					<label for="role">
						Role du compte
					</label>
					<select name="role" id="role">
						<option value="student">Etudiant</option>
						<option value="teacher">Prof</option>
						<option value="admin">Administrateur</option>
					</select>
				</div>
				<div>
					<label for="password">
						Mot de passe
					</label>
					<input type="password" placeholder="********" name="password" id="password"/>
				</div>
				<button>
					Inscription
				</button>
			</form>
		</div>
	</div>

{% endblock %}
